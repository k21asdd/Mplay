<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mplay.MainActivity" >
    
    <SeekBar
        android:id="@+id/seekMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stop"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp" />
    
    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/action"
        android:layout_alignBottom="@+id/action"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/action"
        android:text="@string/stop" />

    <Button
        android:id="@+id/nextSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/preSong"
        android:layout_alignBottom="@+id/preSong"
        android:layout_alignLeft="@+id/stop"
        android:text="@string/next" />

    <Button
        android:id="@+id/preSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="79dp"
        android:layout_toLeftOf="@+id/stop"
        android:text="@string/pre" />

    <Button
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/preSong"
        android:layout_alignLeft="@+id/seekMusic"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="36dp"
        android:text="@string/action" />

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/currenTime"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/currenTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/finalTime"
        android:layout_alignLeft="@+id/finalTime"
        android:layout_marginBottom="14dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/finalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekMusic"
        android:layout_alignLeft="@+id/seekMusic"
        android:layout_marginBottom="14dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>